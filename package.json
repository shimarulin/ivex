{
  "name": "ivex",
  "version": "1.0.0",
  "description": "Web application components and modules built on top of Vue.js, Nuxt.js and iView",
  "author": "Vyacheslav Shimarulin <shimarulin@gmail.com>",
  "homepage": "https://github.com/shimarulin/ivex#readme",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shimarulin/ivex.git"
  },
  "bugs": {
    "url": "https://github.com/shimarulin/ivex/issues"
  },
  "keywords": [
    "nuxt",
    "vue"
  ],
  "workspaces": [
    "packages/@ivex/*",
    "packages/examples/*"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "lerna run lint --parallel --"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index -g"
    }
  },
  "lint-staged": {
    "linters": {
      "**/*.vue": [
        "eslint --fix",
        "stylelint --fix",
        "git add"
      ],
      "**/*.js,!**/templates/**/*.js": [
        "eslint --fix",
        "git add"
      ],
      "**/*.{less,css}": [
        "stylelint --fix",
        "git add"
      ],
      "**/*.md": [
        "prettier --parser markdown --prose-wrap always --write",
        "git add"
      ]
    }
  },
  "devDependencies": {
    "@platr/eslint-config-vue": "^0.1.0",
    "eslint": "^5.12.1",
    "husky": "^1.3.1",
    "lerna": "^3.10.7",
    "lint-staged": "^8.1.1",
    "prettier": "^1.16.2",
    "stylelint": "^9.10.1",
    "stylelint-config-rational-order": "^0.0.4",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-processor-html": "^1.0.0"
  }
}
